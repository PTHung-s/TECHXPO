# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# API KEYS - REQUIRED
# =============================================================================
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_API_KEY2=your_backup_google_api_key_here
HEYGEN_API_KEY=your_heygen_api_key_here
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# =============================================================================
# LIVEKIT CONFIGURATION - REQUIRED
# =============================================================================
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# =============================================================================
# AI AGENT CONFIGURATION
# =============================================================================
DG_LANGUAGE=vi
DG_MODEL=nova-2
DG_TTS_MODEL=aura-2-thalia-en
ENABLE_TTS=0
GEMINI_RT_MODEL=gemini-live-2.5-flash-preview
GEMINI_LOCATION=asia-southeast1

# =============================================================================
# CLINIC INFORMATION
# =============================================================================
CLINIC_NAME=Your Clinic Name
CLINIC_DOCTOR=Dr. Your Name
CLINIC_LOCATION=Your Location
AGENT_NAME=kiosk

# =============================================================================
# DOCKER DEPLOYMENT CONFIGURATION
# =============================================================================
# DuckDNS Configuration (for free SSL domains)
DUCKDNS_TOKEN=your_duckdns_token_here
DUCKDNS_SUBDOMAINS=your-kiosk-subdomain,your-dashboard-subdomain

# Domain Configuration
KIOSK_HOST=your-kiosk-subdomain.duckdns.org
DASHBOARD_HOST=your-dashboard-subdomain.duckdns.org

# SSL/TLS Configuration
CADDY_EMAIL=your-email@example.com

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# CORS Origins for production (comma-separated, no spaces)
ALLOWED_ORIGINS=https://your-kiosk-subdomain.duckdns.org,https://your-dashboard-subdomain.duckdns.org

# Debug Settings (0 = off, 1 = on)
KIOSK_DEBUG_PERSONAL=0
BOOKING_DEBUG=0

# Database and Storage Paths
KIOSK_DB=/data/kiosk.db
KIOSK_OUT=/data/out